{% extends 'base.html.twig' %}

{% block title %}
    {{parent()}} - Dashboard
{% endblock %}

{% block body %}
    {{parent()}}
<div class="container">
    {% for post in pagination %}
    <div class="row">
        <div class="col-md-8 cursor">
            <div class="bg-white rounded p-3 my-3"  onclick="window.location.href='{{path('postDetail',{id:post.id})}}'">
                <div class="d-flex bd-highlight">
                    <div class="p-2 flex-grow-1 bd-highlight">
                        <h3>{{post.title}}</h3>
                        <div class="my-3 bg-yellow"> <i class="fa fa-user"></i><strong> Creado por {{post.name}}</strong></div>
                        <div class=" bg-green"><i class="far fa-clock"></i> <strong>Fecha de publicaci√≥n: {{post.publishDate | date('Y-m-d')}}</strong></div>
                    </div>
                    <div class="p-2 bd-highlight">
                        <div class="align-self-center">
                            <img class="rounded" src={{asset('uploads/photos/'~post.photo)}} width="150px">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="bg-white rounded p-3 my-3">
                <h4>Comentarios</h4>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
<div class="d-flex justify-content-center">
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}
