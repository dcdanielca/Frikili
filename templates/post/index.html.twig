        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-6 bg-white rounded my-3 p-5">
                <h2>Crear Post</h2>
                {{form(form)}}
            </div>
        </div>
    </div>
{% endblock %}
